<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.example.Java_8.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RedirectTest</servlet-name>
        <servlet-class>com.example.Java_8.RedirectTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RedirectTest</servlet-name>
        <url-pattern>/red</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RedirectTest_t</servlet-name>
        <servlet-class>com.example.Java_8.RedirectTest_t</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RedirectTest_t</servlet-name>
        <url-pattern>/red_302</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ForwardTest</servlet-name>
        <servlet-class>com.example.Java_8.ForwardTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForwardTest</servlet-name>
        <url-pattern>/forward</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FormTest</servlet-name>
        <servlet-class>com.example.Java_8.form.web.FormTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormTest</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>username</param-name>
        <param-value>jzh</param-value>
    </context-param>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>com.example.Java_8.file.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.example.Java_8.file.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CookieServlet</servlet-name>
        <servlet-class>com.example.Java_8.cookie.CookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieServlet</servlet-name>
        <url-pattern>/cookieServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AjaxServlet</servlet-name>
        <servlet-class>com.example.Java_8.ajax.AjaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxServlet</servlet-name>
        <url-pattern>/ajaxServlet</url-pattern>
    </servlet-mapping>
</web-app>